<% provide(:title, 'All users') %>
<div class="container">
	<h1>All users</h1>

	<%= will_paginate %>
			<% if current_user.admin? %>
    			<%= link_to "New user", signup_path, :class=> 'btn btn-info pull-right' %>
  			<% end %>

	<ul class="users">
	    <%= render @users %>
	</ul>

	<%= will_paginate %>
</div>